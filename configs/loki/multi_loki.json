{
  "kafka": {
    "broker"                   : "172.17.0.3:9092",
    "topic"                    : "loki_detector",
    
    "message.max.bytes"        : "10000000",
    "fetch.message.max.bytes"  : "10000000",
    "replica.fetch.max.bytes"  : "10000000",
    "enable.auto.commit"       : "false",
    "enable.auto.offset.store" : "false"
  },

  "geometry": {
    "xdim"   : 512,
    "ydim"   : 6271,
    "zdim"   : 1,
    "offset" : 0
  },

  "tof": {
    "scale"     : 1000,
    "max_value" : 120000,
    "bin_size"  : 512
  },

  "plot": {
    "plot_type"              : "tof",
    "window_title"           : "LOKI TOF",
    "plot_title"             : "TOF",
