    "clear_interval_seconds" : 30,
    "interpolate_pixels"     : false,
    "color_gradient"         : "hot",
    "invert_gradient"        : false,
    "log_scale"              : false,
    "window_height"          : 350,
    "window_width"           : 750
  },

  "plots": {
    "plot1": {
      "plot_type"              : "pixels",
